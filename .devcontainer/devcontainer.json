{
    "name": "ROS-2-Rosbridge-WebGUI-Example Development Container",
    "privileged": true,
    "remoteUser": "pbreuer",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "pbreuer"
        }
    },
    "workspaceFolder": "/home/pbreuer",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/pbreuer/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "forwardPorts": [6080, 5901],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (Web)"
        },
        "5901": {
            "label": "Desktop (VNC)"
        }
    }
}